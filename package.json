{
  "name": "anthers-components",
  "version": "0.1.0",
  "description": "Reusable frontend components with Tailwind and TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css",
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:tailwind": "tailwindcss -i ./src/styles/index.css -o ./dist/styles.css",
    "prepublishOnly": "npm run build && npm run build:tailwind",
    "create-component": "node scripts/create-component.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "components",
    "tailwind",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@tailwindcss/forms": "^0.5.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.75.6",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "tailwind.preset.js"
  ],
  "dependencies": {
    "react-router": "^7.6.1",
    "react-router-dom": "^7.6.1",
    "tailwind-merge": "^3.3.0"
  }
}
